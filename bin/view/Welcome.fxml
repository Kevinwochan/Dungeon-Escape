<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="500.0" fitWidth="813.0" pickOnBounds="true">
         <image>
            <Image url="@../assets/window.png" />
         </image>
      </ImageView>
      <AnchorPane layoutX="4.0" prefHeight="500.0" prefWidth="800.0">
         <children>
            <Label alignment="CENTER" layoutX="125.0" layoutY="70" prefHeight="65.0" prefWidth="500.0" text="Can you escape The Dungeon?" textAlignment="JUSTIFY">
               <font>
                  <Font size="34.0" />
               </font>
            </Label>
            <Label alignment="CENTER" layoutX="225.0" layoutY="140.0" prefHeight="45.0" prefWidth="350.0" text="Choose a game mode" textAlignment="JUSTIFY">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button layoutX="100.0" layoutY="258.0" mnemonicParsing="false" onAction="#designButton" prefHeight="45.0" prefWidth="150.0" text="Design a Puzzle" />
            <Button layoutX="250.0" layoutY="258.0" mnemonicParsing="false" onAction="#puzzleButton" prefHeight="45.0" prefWidth="150.0" text="Play a Puzzle" />
            <Button layoutX="400.0" layoutY="258.0" mnemonicParsing="false" onAction="#handleSettings" prefHeight="45.0" prefWidth="150.0" text="Settings" /> 
 			<Button layoutX="550.0" layoutY="258.0" mnemonicParsing="false" onAction="#exitButton" prefHeight="45.0" prefWidth="150.0" text="Exit" /> 
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
